<% if @article.errors.any? %>
<h2>The following errors prevented the article from getting created</h2>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li>
    <%= msg%>
  </li>
  <% end %>
</ul>
<% end %>



<%= form_for @article do |f|%>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", placeholder: "Title of article" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", placeholder: "Body of article", rows: "8" %>
  </div>
  <p>
    <%= f.submit class: "btn btn-primary" %>
  </p>
<% end %>

<div align="center">
  <%= link_to "[ Cancel request and return to articles listing ]",articles_path %>
</div>